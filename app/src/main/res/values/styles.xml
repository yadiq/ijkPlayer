<resources>

    <!-- Base application theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item><!--导航栏-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--状态栏-->
        <item name="colorAccent">@color/colorAccent</item><!--控件选中后颜色-->
        <item name="android:windowBackground">@color/windowBackground</item><!--背景色-->

        <item name="textAllCaps">false</item><!--Button字母非大写-->
    </style>

    <!--弹窗主题-->
    <style name="dialog_common" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item><!-- 背景变暗 -->
        <item name="android:background">@null</item>
    </style>


</resources>
